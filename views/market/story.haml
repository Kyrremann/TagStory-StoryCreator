!!!
%html
  %head
    = haml :'templates/header_imports'
    %link{:href => "/css/layouts/blog.css", :rel => "stylesheet"}
  %body
    = haml :'templates/nav'
    #layout.pure-g
      .content.pure-u-1.pure-u-md-3-4
        %div
          .posts
            %section.post
              %header.post-header
                %img.post-avatar{:src => "https://s3-eu-west-1.amazonaws.com/tagstory/stories/#{@story.id}/images/#{@story.images.first.url}", :height => "48px", :width => '48px'}
                  %h2.post-title
                    = @story.title
                  %p.post-meta
                    By
                    = @story.author
                    /
                      under
                      %a.post-category.post-category-design{:href => "#"} CSS
                      %a.post-category.post-category-pure{:href => "#"} Pure
              .post-description
                %p
                  = @story.description

              
                %a.twitter-hashtag-button{"data-dnt" => "true", "data-related" => "TagStoryApp", "data-size" => "large", "data-url" => "http://tagstory.herokuapp.com/market/story?sid=#{@story.id}", :href => "https://twitter.com/intent/tweet?button_hashtag=TagStory&text=Check out this story by #{@story.author}"} Tweet #{@story.title}
                :javascript
                  !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
          .footer
