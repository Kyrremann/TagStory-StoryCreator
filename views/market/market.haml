!!!
%html
  %head
    = haml :'templates/header_imports'
    %link{:href => "/css/layouts/blog.css", :rel => "stylesheet"}
  %body
    = haml :'templates/nav'
    #layout.pure-g
      .content.pure-u-1.pure-u-md-3-4
        %div
          .posts
            %h1.content-subhead Latest stories
            - @stories.each do | story |
              - next unless story.published
              %section.post
                %header.post-header
                  %img.post-avatar{:src => "https://s3-eu-west-1.amazonaws.com/tagstory/stories/#{story.id}/images/#{story.images.first.url}", :height => "96px", :width => '96px'}
                    %h2.post-title
                      %a.post-author{:href => "/market/story?sid=#{story.id}"}
                        = story.title
                    %p.post-meta
                      By
                      = story.author
                    /
                      under
                      %a.post-category.post-category-design{:href => "#"} CSS
                      %a.post-category.post-category-pure{:href => "#"} Pure
                .post-description
                  %p
                    = story.description
          .footer
