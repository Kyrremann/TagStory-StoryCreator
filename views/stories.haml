!!!
%html
  %head
    %title Stories
    = haml :"templates/header_imports"
  %body
    = haml :"templates/nav"
    .pure-g
      .pure-u-1-4
      .pure-u-1-2
        .posts
          - @stories.each do | value |
            - story = value["value"]
            %section.post
              %header.post-header
                %h2.post-title #{story["title"]}
                %p.post-meta
                  By
                  %a.post-author{:href => "#"} #{story["author"]}
                  under
                  %a.post-category.post-category-pure{:href => "#"} #{story["genre"]}
              .post-description
                %p #{story["description"]}
      .pure-u-1-4
